@model IEnumerable<PatSystem.UI.ViewModels.SegListViewModel>

<div class="card shadow mb-4 mt-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Lista de Curriculos</h6>
    </div>
    <div class="card-body">
        <table class="table text-center  w3-striped" id="dataTable" width="100%" cellspacing="0">
            <thead class="table-dark ">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.SegId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CodSeguro)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Profissao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Empresa)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Segmento)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SegId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CodSeguro)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Profissao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Empresa)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Segmento)
                        </td>
                        <td class="row ">
                            <a class="btn btn-primary  ml-1 pt-0 mt-1 btn-sm" asp-action="Edit" asp-route-id="@item.SegId">Editar</a>
                            <a class="btn btn-success  ml-1 pt-0 mt-1 btn-sm" asp-action="Details" asp-route-id="@item.SegId">Detalhe</a>
                            <a class="btn btn-danger  ml-1 pt-0 mt-1 btn-sm" asp-action="Remove" asp-route-id="@item.SegId">Remover</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



<script src="~/Layout/vendor/datatables/jquery.dataTables.min.js"></script>
<script src="~/Layout/vendor/datatables/dataTables.bootstrap4.js"></script>
<link href="~/Layout/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet" />

<!-- Page level custom scripts -->
<script src="~/js/demo/datatables-demo.js"></script>
