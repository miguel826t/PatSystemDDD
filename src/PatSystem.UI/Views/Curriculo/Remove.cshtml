@model PatSystem.UI.ViewModels.CrDeleteViewModel

@{
    ViewData["Title"] = "Remover";
}
@await Html.PartialAsync("~/Views/Curriculo/PartialViews/_MenuSuperior.cshtml")


<h3 class="text-danger">Tem Certeza que Deseja Remover o Curriculo de @Html.DisplayFor(model => model.Nome)?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CurriculoID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClienteId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>

    <form asp-action="Remove" method="post">
        <input type="hidden" asp-for="CurriculoID" />
        <a class="btn btn-info mr-2" asp-action="Index">Voltar</a>
        <a class="btn btn-success mr-2" asp-action="Details" asp-route-id="@Model.CurriculoID">Ver Detalhes</a>
        <input type="submit" value="Remover" class="btn btn-danger" />
    </form>
</div>

